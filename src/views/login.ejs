<%- include('includes/head') %>
  <%- include('includes/nav') %>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">

          <h1 class="text-center">
            Crie sua conta ou faça Login.
          </h1>
          <p class="text-center font-italic">
            Faça login ou crie sua conta abaixo.
          </p>

          <%- include('includes/messages'); %>

          <div class="row">
            <div class="col-lg">
              <h4>Cadastro de Usuário:</h4>
              <h6>Caso você não tenha um cadastro, preencha as informações abaixo.</h6>
              <form class="form-cadastro" action="/login/register" method="POST" class="mt-3">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label>Email:</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Senha:</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Criar Conta</button>
              </form>
            </div>

            <div class="col-lg my-md-5">
              <h4>Login:</h4>
              <h6>Caso você tenha uma conta, faça logincom seu email e senha.</h6>
              <form class="form-login" action="/login/login" method="POST" class="mt-3">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label>Email:</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Senha:</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
            </div>
          </div>
          <div class="col-lg-2"></div>
        </div>
      </div>
      <%- include('includes/footer') %>